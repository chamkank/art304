
<div class = "container">
    <form role = "form"
          enctype = "multipart/form-data" method = "POST"
          action = "/art">

        <div class="form-group row">
            <label for="fieldArt" class="col-sm-2 col-form-label"> Select File </label>
            <div class="col-sm-6">
                <input type="file" class="form-control" required accept="image/*" id="fieldArt" name="art">
            </div>
        </div>

        <div class="form-group row">
            <label for="fieldTitle" class="col-sm-2 col-form-label"> Title </label>
            <div class="col-sm-6">
                <input type="text" class="form-control" required id="fieldTitle" name="title" placeholder="Title">
            </div>
        </div>

        <div class="form-group row">
            <label for="fieldDescription" class="col-sm-2 col-form-label"> Description </label>
            <div class="col-sm-6">
                <input type="text" class="form-control"  required id="fieldDescription" name="description" placeholder="Description">
            </div>
        </div>

