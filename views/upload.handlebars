
<div class = "container">
    <form role = "form"
          enctype = "multipart/form-data" method = "post"
          action = "/art">

        <div class="form-group row">
            <label for="fieldArt" class="col-sm-2 col-form-label"> Select File </label>
            <div class="col-sm-6">
                <input type="file" class="form-control" required accept="image/*" id="fieldArt" name="art">
            </div>
        </div>

        <div class="form-group row">
            <label for="fieldTitle" class="col-sm-2 col-form-label"> Title </label>
            <div class="col-sm-6">
                <input type="text" class="form-control" required id="fieldTitle" name="title" placeholder="Title">
            </div>
        </div>

        <div class="form-group row">
            <label for="fieldDescription" class="col-sm-2 col-form-label"> Description </label>
            <div class="col-sm-6">
                <input type="text" class="form-control"  required id="fieldDescription" name="description" placeholder="Description">
            </div>
        </div>

        <div class="form-group row">
            <label for="fieldTags" class="col-sm-2 col-form-label"> Tags </label>
            <div class="col-sm-6">
                <input type="text" class="form-control" required id="fieldTags" name="tags" placeholder="Tags">
            </div>
        </div>

        <fieldset class="form-group row">
            {{! Should be using legend attribute instead of label }}
            <label class="col-sm-2 col-form-label"> Content Rating </label>
            <div class="col-sm-6">
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="rating" id="fieldRatedEveryone" value="option1">
                        Everyone
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="rating" id="fieldRatedR" value="option2">
                        R
                    </label>
                </div>
            </div>
        </fieldset>


        <div class="form-group row">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>