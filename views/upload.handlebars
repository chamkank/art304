        <div class="form-group row">
            <label for="fieldTags" class="col-sm-2 col-form-label"> Tags </label>
            <div id="example3" class="form-control col-sm-8 taggle_list"></div>
            <script>
                var example = new Taggle('example3', {
                    placeholder: 'Tags',
                    duplicateTagClass: 'bounce'
                });
            </script>
        </div>

        <fieldset class="form-group row">
            {{! Should be using legend attribute instead of label }}
            <label class="col-sm-2 col-form-label"> Content Rating </label>
            <div class="col-sm-6">
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="rating" id="fieldRatedEveryone" value="E">
                        E
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="rating" id="fieldRatedR" value="R">
                        R
                    </label>
                </div>
            </div>
        </fieldset>

        <div class="form-group row">
            <button type="submit" class="btn-primary">Submit</button>
        </div>
    </form>
</div>